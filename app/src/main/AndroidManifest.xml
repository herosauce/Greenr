<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thehobbygardener.greenr">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyCalendar"
            android:label="My Calendar"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Calendar"
            android:label="@string/title_activity_calendar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Settings" />
        <activity
            android:name=".FruitSearch"
            android:label="@string/title_activity_plant_search"
            android:theme="@style/AppTheme" />
        <activity android:name=".MyGarden" />
        <activity android:name=".HerbSearch" />
        <activity android:name=".VegetableSearch" />
        <activity android:name=".Reminders" />
        <activity android:name=".ManageReminder" />
        <activity android:name=".PlotManager" />
        <activity android:name=".PlantTypeSelection" />
        <activity android:name=".PlantDetails" />
        <activity android:name=".LogJournal" />
        <activity android:name=".Achievements" />
        <activity android:name=".AvatarDesigner" />
        <activity android:name=".CostPlanner" />
        <activity android:name=".SeedBank" />
        <activity android:name=".GardenGallery" />
        <activity android:name=".AnalyticsDashboard" />
        <activity android:name=".SnapshotManager"></activity>
    </application>

</manifest>